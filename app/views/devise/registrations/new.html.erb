<div class="sinupPage">
  <header class="header">
    <div>アカウントを作成</div>
  </header>
  <div class="container">
    <%= form_with model: @user, url: new_user_registration_path do |f| %>

      <!--画像-->
      <label for="file_photo" class="rounded-circle userProfileImg">
        <div class="userProfileImg_description">画像をアップロード</div>
        <i class="fas fa-camera fa-3x"></i>
        <%= f.file_field :profile_image, id: "file_photo" %>
      </label>
      <div class="userImgPreview" id="userImgPreview">
        <img id="thumbnail" class="userImgPreview_content" accept="image/*" src="">
        <p class="userImgPreview_text">画像をアップロード済み</p>
      </div>

      <!--namae-->
      <div class="form-group">
        <%= f.label :name, "名前" %>
        <%= f.text_field :name, class: "form-control", placeholder: "名前を入力してください" %>
      </div>

      <!--email-->
      <div class="form-group">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, class: "form-control", placeholder: "emailを入力してください", autocomplete: "email" %>
      </div>

      <!--password-->
      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上入力してください)</em>
        <% end %><br />
        <%= f.password_field :password, class: "form-control", placeholder: "パスワードを入力してください", autocomplete: "off" %>
      </div>

      <!--確認用password-->
      <div class="form-group">
        <%= f.label :password_confirmation, "確認用パスワード" %><br />
        <%= f.password_field :password_confirmation, class: "form-control", placeholder: "パスワードを再度入力してください", autocomplete: "off" %>
      </div>

      <!--性別-->
      <div class="form-group">
        <div><%= f.label :sex, "性別" %></div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :sex, "男", class: "form-check-input", id: "inlineRadio1" %>
          <%= f.label :inlineRadio1, "男", class: "form-check-label" %>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :sex, "女", class: "form-check-input", id: "inlineRadio2" %>
          <%= f.label :inlineRadio2, "女", class: "form-check-label" %>
        </div>
      </div>

      <!--introduction-->
      <div class="form-group">
        <%= f.label :self_introduction, "自己紹介" %>
        <%= f.text_area :self_introduction, class: "form-control" %>
      </div>

      <!--登録ボタン-->
      <div class="text-center">
        <%= f.submit "はじめる", class: "btn submitBtn" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>